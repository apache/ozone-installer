om:
{% if (ha_enabled | default(false)) %}
{%   for h in (groups.get('om', []) | default([])) %}
  - {{ h | regex_replace('^.*@','') | regex_replace(':.*$','') }}
{%   endfor %}
{% else %}
{%   if (groups.get('om', []) | default([])) | length > 0 %}
  - {{ (groups.get('om', [])[0]) | regex_replace('^.*@','') | regex_replace(':.*$','') }}
{%   endif %}
{% endif %}
